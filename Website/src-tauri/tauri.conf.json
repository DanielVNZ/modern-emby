{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Aether",
  "version": "1.0.1",
  "identifier": "com.aether.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Aether",
        "width": 1280,
        "height": 720,
        "minWidth": 1024,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "DanielVNZ",
    "copyright": "Copyright Â© 2026 DanielVNZ",
    "shortDescription": "Aether - Media streaming client",
    "longDescription": "Aether is a modern media streaming client for Emby servers.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": null,
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    },
    "android": {
      "minSdkVersion": 24
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
